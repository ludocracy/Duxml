require 'rake/testtask'
require 'rake/clean'

lib = File.expand_path("../lib", __FILE__)
$LOAD_PATH.unshift(lib) unless $LOAD_PATH.include?(lib)

task :test do
  system "test"
end

task :build do
  system "gem build gem_name.gemspec"
end

task release: :build do
  system "gem push gem_name-#{GemName::VERSION}"
end

task default: :test