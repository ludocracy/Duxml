require 'rake/testtask'
require 'rake/clean'

Rake::TestTask.new do |t|
  t.libs << 'test'
  t.test_files = FileList['test/**/*test.rb']
  t.verbose = true
end

desc "Run tests"
task :default => :test

task :test do
  Rake::TestTask['test:unit'].invoke
end

task :clean => [:test] do
  Rake::FileList['xml/**/.*.*.duxml'].each { |fn| rm_rf fn rescue nil }
end